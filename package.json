{
	"name": "stimshot",
	"version": "0.1.1",
	"description": "A dead-simple, modern, and lightweight (~4kb) Dependency Injection library for TypeScript",
	"type": "module",
	"license": "MIT",
	"homepage": "https://github.com/vajahath/stimshot#readme",
	"bugs": {
		"url": "https://github.com/vajahath/stimshot/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vajahath/stimshot.git"
	},
	"author": "Vajahath Ahmed <vajuoff.1@gmail.com>",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --write",
		"lint:ci": "biome ci",
		"prepublishOnly": "npm run build && npm run typecheck && npm run lint:ci && npm run test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.3",
		"@types/node": "^24.9.1",
		"bumpp": "^10.3.1",
		"tsdown": "^0.15.9",
		"typescript": "^5.9.3",
		"vitest": "^4.0.1"
	}
}
